{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "trailingSlash": "auto",
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'; font-src data: https:; img-src https: blob: data:; worker-src https: blob:; media-src blob: https:",
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, HEAD"
  },
  "mimeTypes": {
    ".json": "text/json",
    ".wasm": "application/wasm",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  },
  "routes": [
    {
      "route": "/*.wasm",
      "methods": [
        "GET", "HEAD"
      ],
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "application/wasm"
      }
    },
    {
      "route": "/*.woff",
      "methods": [
        "GET",
        "HEAD"
      ],
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "font/woff"
      }
    },
    {
      "route": "/*.woff2",
      "methods": [
        "GET",
        "HEAD"
      ],
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "font/woff2"
      }
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad"
    },
    {
      "route": "/login/github",
      "redirect": "/.auth/login/github"
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [
      "*.{png,jpg,webp,gif}",
      "*.css",
      "*.js"
    ]
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/invalid-invitation-error.html"
    },
    "403": {
      "rewrite": "/custom-forbidden-page.html"
    },
    "404": {
      "rewrite": "/404.html"
    }
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress",
        "registration": {
          "openIdIssuer": "https://43c83900-693c-4148-ac78-9ebdeb220f00.ciamlogin.com/43c83900-693c-4148-ac78-9ebdeb220f00/v2.0",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  }
}